<div class="center">
<h1>Fill in the form below to add a new opportunity</h1>
<div class="row new-form">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @opportunity, local: true) do |f| %>
            <%= f.label "City" %>
            <% cities_array = City.all.map { |city| [city.name, city.id] } %>
            <%= f.select :name, options_for_select(cities_array) %>

            <%= f.label "District" %>
            <% districts_array = District.all.map { |district| [district.name, district.id] } %>
            <%= f.select :name, options_for_select(districts_array) %>
            
            <%= f.label :address %>
            <%= f.text_field :address %>

            <%= f.label :size %>
            <%= f.text_field :size %>

            <%= f.label :rooms %>
            <%= f.text_field :rooms %>

            <%= f.label :floor %>
            <%= f.text_field :floor %>

            <%= f.label :listing_price %>
            <%= f.text_field :listing_price %>

            <%= f.label :estimated_price %>
            <%= f.text_field :estimated_price %>

            <%= f.label :description %>
            <%= f.text_field :description %>

            <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
</div>
